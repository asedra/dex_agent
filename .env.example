# DexAgents Environment Configuration
# Copy this file to .env and update the values for your environment

# OpenAI API Configuration (Required for AI features)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# GitHub Token (optional)
# Create a token at: https://github.com/settings/tokens
GITHUB_TOKEN=your-github-token-here

# Database Configuration
# For PostgreSQL (recommended for production):
DATABASE_URL=postgresql://postgres:postgres123@postgres:5432/dexagents

# PostgreSQL Configuration (used when DATABASE_URL is PostgreSQL)
POSTGRES_DB=dexagents
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123

# JWT Configuration
JWT_SECRET_KEY=your-very-secure-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Backend API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# CORS Configuration
BACKEND_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_API_TOKEN=your-secret-key-here
NEXT_PUBLIC_WS_URL=ws://localhost:8080

# Application Settings
NEXT_PUBLIC_APP_NAME=DexAgents
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=Windows Endpoint Management Platform

# Feature Flags
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=true

# PowerShell Settings
DEFAULT_TIMEOUT=30
MAX_TIMEOUT=300

# Agent Settings
AGENT_INSTALLER_PATH=agent_installers
TEMP_DIR=temp

# Environment
ENVIRONMENT=development
# ENVIRONMENT=production

# Logging
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Next.js
NODE_ENV=development
# NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Additional AI Model API Keys (optional)
# Uncomment and fill in the ones you want to use

# Anthropic Claude
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google Gemini
# GOOGLE_API_KEY=your-google-api-key-here

# Mistral AI
# MISTRAL_API_KEY=your-mistral-api-key-here

# Perplexity AI
# PERPLEXITY_API_KEY=your-perplexity-api-key-here

# OpenRouter
# OPENROUTER_API_KEY=your-openrouter-api-key-here

# X.AI (Grok)
# XAI_API_KEY=your-xai-api-key-here

# Azure OpenAI
# AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
# AZURE_OPENAI_ENDPOINT=your-azure-openai-endpoint-here

# Ollama (local models)
# OLLAMA_API_URL=http://localhost:11434