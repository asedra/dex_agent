# DexAgents Environment Configuration
# Copy this file to .env and update the values for your environment

# Database Configuration
# For PostgreSQL (recommended for production):
DATABASE_URL=postgresql://dexagents:your_secure_password@postgres:5432/dexagents

# For SQLite (development only):
# DATABASE_URL=data/dexagents.db

# PostgreSQL Configuration (used when DATABASE_URL is PostgreSQL)
POSTGRES_DB=dexagents
POSTGRES_USER=dexagents
POSTGRES_PASSWORD=your_secure_password

# Backend Security
SECRET_KEY=your-very-secure-secret-key-change-this-in-production

# CORS Configuration
BACKEND_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_API_TOKEN=your-secret-key-here
NEXT_PUBLIC_WS_URL=ws://localhost:8080

# Application Settings
NEXT_PUBLIC_APP_NAME=DexAgents
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=Windows Endpoint Management Platform

# Feature Flags
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=true

# PowerShell Settings
DEFAULT_TIMEOUT=30
MAX_TIMEOUT=300

# Agent Settings
AGENT_INSTALLER_PATH=agent_installers
TEMP_DIR=temp

# Environment
ENVIRONMENT=development
# ENVIRONMENT=production

# Logging
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Next.js
NODE_ENV=development
# NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1